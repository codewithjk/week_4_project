<h2 class="text-white"><%= title %></h2>
<div class="d-flex text-white overflow-x-scroll mb-3">
  <% movies.forEach(element => {%>
  <div class="card col-6 col-md-3 mx-2">
    <img
      width="100px"
      src="https://image.tmdb.org/t/p/original<%= element.poster_path %>"
      class="card-img-top"
      alt="..."
    />
    <div class="card-body">
      <h5 class="card-title text-nowrap text-truncate">
        <%= element.original_title %>
      </h5>
      <p class="card-text ellipsis-lines-3"><%= element.overview %></p>
      <p class="card-text">
        <small class="text-body-secondary"
          >Rating ⭐️ <%= element.vote_average %></small
        >
      </p>
    </div>
  </div>
  <% }); %>
</div>
